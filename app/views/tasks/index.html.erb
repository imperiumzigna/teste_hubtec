<div class="card">
<div class="card-header">
<%= link_to 'Nova Tarefa', new_task_path, class: "float-right my-2 btn btn-success" %>
</div>
<div class="card-body">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Status</th>
      <th scope="col">Tarefa</th>
      <th scope="col">Prioridade</th>
      <th scope="col" colspan="3">Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td>
        <% if task.status == 'ativa' %>
          <input id="task_<%= task.id %>" class="finish_task" type="checkbox" value="<%= task.id %>">
        <% else%>
         <input id="task_<%= task.id %>" class="finish_task" type="checkbox" value="<%= task.id %>" checked>
        <% end %>
        </td>
        <td><%= task.body %></td>
        <td><label class="badge badge-secondary"><%= task.priority %></label</td>
        <td><%= task.finish_at %></td>
        <td><%= link_to 'Visualizar', task, class: "btn btn-info" %></td>
        <td><%= link_to 'Editar', edit_task_path(task), class: "btn btn-warning" %></td>
        <td><%= link_to 'Remover', task, method: :delete, data: { confirm: 'Você tem certeza?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<div class="card-footer">
<%= will_paginate @tasks, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
</div>
</div>